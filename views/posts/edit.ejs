<% include ../partials/header %>

<!-- Page Header -->
<header class="masthead" style="background-image: url('/img/contact-bg.jpg')">
  <div class="overlay"></div>
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        <div class="page-heading">
          <h1>Edit <%= post.title %></h1>
        </div>
      </div>
    </div>
  </div>
</header>

<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <form
        action="/posts/<%= post.slug %>?_method=PUT"
        method="post"
        enctype="multipart/form-data"
      >
        <div class="control-group">
          <div class="form-group floating-label-form-group controls">
            <label>Username</label>
            <input
              type="text"
              name="username"
              value="<%= post.username %>"
              class="form-control"
            />
          </div>
        </div>
        <div class="control-group">
          <div class="form-group floating-label-form-group controls">
            <label>Title</label>
            <input
              type="text"
              name="title"
              value="<%= post.title %>"
              class="form-control"
            />
          </div>
        </div>
        <div class="control-group">
          <div class="form-group floating-label-form-group controls">
            <label>Description</label>
            <input
              type="text"
              name="description"
              value="<%= post.description %>"
              class="form-control"
            />
          </div>
        </div>
        <div class="control-group">
          <div class="form-group floating-label-form-group controls">
            <label>Content</label>
            <textarea
              name="content"
              id=""
              cols="30"
              rows="10"
              class="form-control"
            >
<%= post.content %></textarea
            >
          </div>
        </div>
        <div class="control-group">
          <div class="form-group floating-label-form-group controls">
            <label>Image</label>
            <input
              type="file"
              id="image"
              name="image"
              accept="image/*"
              class="form-control"
            />
          </div>
        </div>
        <div class="form-group my-4 text-center">
          <button class="btn btn-primary">Edit Post &rarr;</button>
        </div>
      </form>
      <a class="btn btn-dark" href="/">Go Back &larr;</a>
    </div>
  </div>
</div>

<% include ../partials/footer %>
